@import '../../_styl/vars/*.styl'

.kc-profilePicture
  position: relative
  display: inline-block
  font-size: 1em
  img
    position: relative
    background-color: #f2f2f2
    border: 1px solid #e0e0e0
    width: 2em
    height: 2em
    display: flex
    justify-content: center
    align-items: center
    border-radius: 4px
    color: #444
    object-fit: cover
  &:not(.kc-profilePicture--error):after
    font-family: 'Font Awesome 5 Brands'
    justify-content: center
    align-items: center
    position: absolute
    top: -0.5em
    right: -0.5em
    width: 1.5em
    height: 1.5em
    display: flex
    font-size: 0.5em
    border-radius: 50%
    color: white
    padding: .15em
  &.kc-profilePicture--twitter:after
    content: '\f099'
    background-color: $twitter-blue
  &.kc-profilePicture--instagram:after
    content: '\f16d'
    background-color: $instagram-purple
  &.kc-profilePicture--youtube:after
    content: '\f167'
    background-color: $youtube-red
  &.kc-profilePicture--facebook:after
    content: '\f39e'
    background-color: $facebook-blue
  &.kc-profilePicture--news:after
    content: '\f1ea'
    background-color: $news-gray
    font-family: 'Font Awesome 5 Pro'
  &.kc-profilePicture--blogs:after
    content: '\f09e'
    background-color: $blogs-yellow
    font-family: 'Font Awesome 5 Pro'
  &.kc-profilePicture--forums:after
    content: '\f086'
    background-color: $forums-green
    font-family: 'Font Awesome 5 Pro'
  &.kc-profilePicture--error
    img
      display: none
    &:after
      font-family: 'Font Awesome 5 Brands'
      justify-content: center
      align-items: center
      display: flex
      font-size: 1.5em
      padding: .15em
      background-color: transparent
    &.kc-profilePicture--twitter:after
      content: '\f099'
      color: $twitter-blue
    &.kc-profilePicture--instagram:after
      content: '\f16d'
      color: $instagram-purple
    &.kc-profilePicture--youtube:after
      content: '\f167'
      color: $youtube-red
    &.kc-profilePicture--facebook:after
      content: '\f39e'
      color: $facebook-blue
    &.kc-profilePicture--news:after
      content: '\f1ea'
      color: $news-gray
      font-family: 'Font Awesome 5 Pro'
    &.kc-profilePicture--blogs:after
      content: '\f09e'
      color: $blogs-yellow
      font-family: 'Font Awesome 5 Pro'
    &.kc-profilePicture--forums:after
      content: '\f086'
      color: $forums-green
      font-family: 'Font Awesome 5 Pro'
    &.kc-profilePicture--brand:after
      content: '\f005'
      color: $gray
      font-family: 'Font Awesome 5 Pro'
    &.kc-profilePicture--gray
      &.kc-profilePicture--twitter,
      &.kc-profilePicture--instagram,
      &.kc-profilePicture--youtube,
      &.kc-profilePicture--facebook,
      &.kc-profilePicture--news,
      &.kc-profilePicture--blogs,
      &.kc-profilePicture--forums
        &::after
          color: $gray