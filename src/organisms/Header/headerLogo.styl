.kc-headerLogoLink, .kc-headerLogo
  display: inline-block
  margin-left: 1em
  align-self: center
.kc-headerLogoLink
  display: flex
  align-items: center
  max-width: 150px
  transition: 150ms ease-in-out
  &:hover
    .kc-svg-keyholeLogoSolid__icon, .kc-svg-keyholeLogoNew__icon
      fill: $white
      transform: rotate(-90deg)
    .kc-headerLogo--themeDark .kc-svg-keyholeLogoNew__icon
      fill: $dark-blue
      transform: rotate(-90deg)
  .kc-headerLogo
    max-width: unset
    margin-left: 0
.kc-headerLogo
  height: 40px
  display: flex
  align-items: center
  transition: 150ms ease-in-out
.kc-headerLogo__image
  height: 100%
  object-fit: contain
  object-position: center
.kc-svg-keyholeLogoSolid
  height: 26px
.kc-svg-keyholeLogoSolid__icon
  transition: 150ms ease-out
  transform: none
  transform-origin: 919.6px 124px
.kc-svg-keyholeLogoNew
  height: 40px
  transition: 150ms ease-in-out
.kc-svg-keyholeLogoNew__icon
  transition: 150ms cubic-bezier(0.33, -0.24, 0.21, 1.84)
  transform: none
  transform-origin: 12.75px 286.5px