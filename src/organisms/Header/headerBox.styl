@import '../../_styl/vars/*.styl'

.kc-headerBox
  position: relative
  display: flex
  height: 100%
  align-items: center
  justify-content: center
  text-align: center
  color: rgba($white, .8)
  padding: 0 1rem
  font-weight: 300
  font-size: .85em
  cursor: pointer
  transition: 300ms ease-in-out
  @media (max-width: 800px)
    display: none
  &:before
    content: ''
    position: absolute
    z-index: 2
    left: 0
    top: 1.5em
    bottom: 1.5em
    border-left: 1px solid rgba($white, .1)
    transition: 300ms ease-in-out
  &:hover, &.kc-headerBox--open
    color: $white
    background-color: rgba($black, .1)
    .kc-icon
      color: $white
    &:before
      top: 0
      bottom: 0
  .kc-icon
    margin-left: .75em
    margin-top: .15em
    color: rgba($white, .5)
    transform-origin: center
    transform: rotate(0deg)
    transition: 300ms ease-in-out
  &.kc-headerBox--open
    .kc-icon
      transform: rotate(180deg)

.kc-headerBoxDropdown
  position: absolute
  top: 100%
  right: 0
  left: 1px
  background-color: $dark-blue
  border-top: 1px solid rgba($white, .1)
  display: flex
  flex-direction: column
  transform-origin: top
  transform: scaleY(0)
  transition: 300ms ease-in-out
  &.kc-headerBoxDropdown--open
    transform: scaleY(1)
  .kc-headerBoxDropdown__link
    color: $white
    line-height: 1.5
    text-align: left
    padding: .75rem 1rem
    padding-bottom: 0
    &:last-child
      padding-bottom: .75rem
    &:hover
      text-decoration: underline