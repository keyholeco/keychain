@import '../../_styl/vars/*.styl'

.kc-footer
  background-color: $yellow
  color: $dark-blue
  text-align: left
  padding: 2.5em
  @media (max-width: 800px)
    text-align: center

.kc-footer__heading
  display: block
  font-size: 1.2em
  line-height: 1.5
  margin-bottom: .5em

.kc-footer__link a
  display: block
  font-size: .9em
  line-height: 1.35
  color: inherit
  text-decoration: none
  margin-top: .5em

.kc-footerSection--wrapper
  display: flex
  justify-content: center
  max-width: 1200px
  margin: 0 auto
  padding-bottom: 2.5em
  flex-wrap: wrap

.kc-footerSection--linkContainer
  width: 200px
  padding: 1em
  @media (max-width: 800px)
    width: 100%
