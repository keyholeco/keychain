.kc-colorBlocks
  display: flex
  flex-wrap: wrap
  justify-content: flex-start
  align-items: flex-start

.kc-colorBlock
  display: block
  cursor: pointer
  border: 1px solid #c2c2c2
  margin-top: 1em
  transition: 150ms ease-in-out
  &:not(:last-of-type)
    margin-right: .5em
  &:hover
    transform: scale(1.05)

colors = 'blue' $blue, 'dark-blue' $dark-blue, 'ghost-blue' $ghost-blue, 'gray' $gray, 'dark-gray' $dark-gray, 'mid-blue' $mid-blue, 'text-default' $text-default, 'text-mid' $text-mid, 'inactive' $inactive, 'quote' $quote, 'delete' $delete, 'light-grey' $light-grey, 'green' $green, 'dark-green' $dark-green, 'light-green' $light-green, 'old-green' $old-green, 'yellow' $yellow, 'dark-yellow' $dark-yellow, 'light-yellow' $light-yellow, 'secondary-blue' $secondary-blue, 'secondary-yellow' $secondary-yellow, 'secondary-green' $secondary-green, 'secondary-red' $secondary-red, 'secondary-orange' $secondary-orange, 'modal-yellow' $modal-yellow, 'modal-green' $modal-green, 'modal-blue' $modal-blue, 'fb-blue' $fb-blue, 'facebook-blue' $facebook-blue, 'twitter-blue' $twitter-blue, 'instagram-purple' $instagram-purple, 'youtube-red' $youtube-red, 'tiktok-pink' $tiktok-pink, 'news-gray' $news-gray, 'blogs-yellow' $blogs-yellow, 'forums-green' $forums-green,  'red' $red, 'text-gray-1' $text-gray-1, 'text-gray-1-hover' $text-gray-1-hover, 'text-grey-1' $text-grey-1, 'text-grey-1-hover' $text-grey-1-hover, 'text-gray-2' $text-gray-2, 'text-gray-2-hover' $text-gray-2-hover, 'text-grey-2' $text-grey-2, 'text-grey-2-hover' $text-grey-2-hover, 'text-gray-3' $text-gray-3, 'text-gray-3-hover' $text-gray-3-hover, 'text-grey-3' $text-grey-3, 'text-grey-3-hover' $text-grey-3-hover, 'gray' $gray, 'grey' $grey, 'gray-bg' $gray-bg, 'grey-bg' $grey-bg
for pair in colors
  .kc-colorBlock.{pair[0]}, .kc-colorBlock.kc-colorBlock--{pair[0]} .kc-color
    background-color: pair[1]
